---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';

// Get all blog posts and sort them by publication date
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Get featured posts (if any)
const featuredPosts = posts.filter((post) => post.data.featured);

// Get latest posts (limit to 6)
const latestPosts = posts.slice(0, 6);

// Get posts by category
const postsByCategory = posts.reduce((acc, post) => {
  const category = post.data.category;
  if (!acc[category]) {
    acc[category] = [];
  }
  acc[category].push(post);
  return acc;
}, {});

// Get all unique categories
const categories = Object.keys(postsByCategory);
---

<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<!-- Hero Section -->
			<section class="hero">
				<div class="hero-content">
					<h1 class="hero-title">Learn Through Stories</h1>
					<p class="hero-tagline">Immersive AI-generated storytelling that teaches real-world skills</p>
					<div class="hero-cta">
						<a href="/blog/" class="cta-button primary">Browse Articles</a>
						<a href="/about/" class="cta-button secondary">Our Approach</a>
					</div>
				</div>
			</section>

			<!-- Featured Posts Section -->
			{featuredPosts.length > 0 && (
				<section class="featured-section">
					<div class="section-header">
						<h2>Featured Stories</h2>
						<a href="/blog/" class="view-all">View all articles</a>
					</div>
					
					<div class="featured-grid">
						{featuredPosts.slice(0, 3).map(post => (
							<article class="featured-card">
								{post.data.heroImage && (
									<a href={`/blog/${post.slug}/`} class="card-image">
										<img src={post.data.heroImage} alt="" />
										<span class="card-difficulty">{post.data.difficulty}</span>
									</a>
								)}
								<div class="card-content">
									<a href={`/blog/category/${post.data.category.toLowerCase()}`} class="card-category">{post.data.category}</a>
									<h3 class="card-title">
										<a href={`/blog/${post.slug}/`}>{post.data.title}</a>
									</h3>
									<p class="card-excerpt">{post.data.description}</p>
									<div class="card-meta">
										<span class="card-date">{new Date(post.data.pubDate).toLocaleDateString('en-us', {
											year: 'numeric',
											month: 'short',
											day: 'numeric',
										})}</span>
										<span class="card-author">By {post.data.author}</span>
									</div>
								</div>
							</article>
						))}
					</div>
				</section>
			)}
			
			<!-- Latest Posts Section -->
			<section class="latest-section">
				<div class="section-header">
					<h2>Latest Stories</h2>
					<a href="/blog/" class="view-all">View all articles</a>
				</div>
				
				<div class="posts-grid">
					{latestPosts.map(post => (
						<article class="post-card">
							{post.data.heroImage && (
								<a href={`/blog/${post.slug}/`} class="card-image">
									<img src={post.data.heroImage} alt="" />
									<span class="card-difficulty">{post.data.difficulty}</span>
								</a>
							)}
							<div class="card-content">
								<a href={`/blog/category/${post.data.category.toLowerCase()}`} class="card-category">{post.data.category}</a>
								<h3 class="card-title">
									<a href={`/blog/${post.slug}/`}>{post.data.title}</a>
								</h3>
								<p class="card-excerpt">{post.data.description}</p>
								<div class="card-meta">
									<span class="card-date">{new Date(post.data.pubDate).toLocaleDateString('en-us', {
										year: 'numeric',
										month: 'short',
										day: 'numeric',
									})}</span>
								</div>
							</div>
						</article>
					))}
				</div>
			</section>

			<!-- Categories Section -->
			<section class="categories-section">
				<div class="section-header">
					<h2>Explore by Topic</h2>
					<a href="/categories/" class="view-all">View all topics</a>
				</div>
				
				<div class="categories-grid">
					{categories.slice(0, 4).map(category => (
						<a href={`/blog/category/${category.toLowerCase()}`} class="category-card">
							<h3 class="category-name">{category}</h3>
							<p class="category-count">{postsByCategory[category].length} articles</p>
						</a>
					))}
				</div>
			</section>

			<!-- About Section -->
			<section class="about-section">
				<div class="about-content">
					<h2>Why Learn Through Storytelling?</h2>
					<p>
						Stories have been humanity's most powerful teaching tool for thousands of years.
						Our brains are wired to remember narratives, making learning through stories more
						engaging and effective than traditional methods.
					</p>
					<div class="about-features">
						<div class="feature">
							<div class="feature-icon">ðŸ§ </div>
							<h3>Better Retention</h3>
							<p>Information presented in a narrative format is up to 22x more memorable than facts alone.</p>
						</div>
						<div class="feature">
							<div class="feature-icon">ðŸŒŸ</div>
							<h3>More Engaging</h3>
							<p>Stories create emotional connections that make learning more immersive and enjoyable.</p>
						</div>
						<div class="feature">
							<div class="feature-icon">ðŸ“š</div>
							<h3>Real-World Context</h3>
							<p>Our stories show how skills apply in practical, everyday scenarios you can relate to.</p>
						</div>
					</div>
					<a href="/about/" class="cta-button primary">Learn More About Our Approach</a>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		width: 100%;
		max-width: 100%;
		margin: 0 auto;
	}

	/* Hero Section */
	.hero {
		background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/blog-placeholder-1.html') center/cover;
		color: white;
		padding: 6rem 2rem;
		text-align: center;
		margin-bottom: 4rem;
	}

	.hero-content {
		max-width: 800px;
		margin: 0 auto;
	}

	.hero-title {
		font-size: 3.5rem;
		font-weight: 800;
		margin-bottom: 1rem;
	}

	.hero-tagline {
		font-size: 1.5rem;
		margin-bottom: 2rem;
		opacity: 0.9;
	}

	.hero-cta {
		display: flex;
		gap: 1rem;
		justify-content: center;
	}

	/* Section Styling */
	section {
		padding: 0 2rem;
		margin-bottom: 4rem;
		max-width: 1200px;
		margin-left: auto;
		margin-right: auto;
	}

	.section-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 2rem;
	}

	.section-header h2 {
		font-size: 2rem;
		margin: 0;
	}

	.view-all {
		color: var(--accent);
		text-decoration: none;
		font-weight: 500;
		transition: color 0.2s ease;
	}

	.view-all:hover {
		color: var(--accent-dark);
		text-decoration: underline;
	}

	/* Featured Posts */
	.featured-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
		gap: 2rem;
	}

	.featured-card {
		border-radius: 8px;
		overflow: hidden;
		box-shadow: var(--box-shadow);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		background: white;
	}

	.featured-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 20px rgba(var(--gray), 30%);
	}

	/* Latest Posts */
	.posts-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		gap: 2rem;
	}

	.post-card {
		border-radius: 8px;
		overflow: hidden;
		box-shadow: var(--box-shadow);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		background: white;
	}

	.post-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 20px rgba(var(--gray), 30%);
	}

	/* Card Styling (shared between featured and regular posts) */
	.card-image {
		display: block;
		position: relative;
		aspect-ratio: 16 / 9;
		overflow: hidden;
	}

	.card-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.card-image:hover img {
		transform: scale(1.05);
	}

	.card-difficulty {
		position: absolute;
		top: 1rem;
		right: 1rem;
		background-color: rgba(0, 0, 0, 0.6);
		color: white;
		padding: 0.25rem 0.75rem;
		border-radius: 2rem;
		font-size: 0.8rem;
	}

	.card-content {
		padding: 1.5rem;
	}

	.card-category {
		display: inline-block;
		font-size: 0.8rem;
		font-weight: 600;
		color: var(--accent);
		text-decoration: none;
		margin-bottom: 0.5rem;
		transition: color 0.2s ease;
	}

	.card-category:hover {
		color: var(--accent-dark);
		text-decoration: underline;
	}

	.card-title {
		font-size: 1.3rem;
		margin: 0 0 0.75rem;
		line-height: 1.4;
	}

	.card-title a {
		color: rgb(var(--black));
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.card-title a:hover {
		color: var(--accent);
	}

	.card-excerpt {
		margin: 0 0 1rem;
		font-size: 0.95rem;
		color: rgb(var(--gray));
		line-height: 1.6;
	}

	.card-meta {
		display: flex;
		justify-content: space-between;
		font-size: 0.85rem;
		color: rgb(var(--gray));
	}

	/* Categories Section */
	.categories-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
		gap: 1.5rem;
	}

	.category-card {
		background-color: #f8f9fa;
		padding: 1.5rem;
		border-radius: 8px;
		text-align: center;
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.category-card:hover {
		transform: translateY(-5px);
		box-shadow: var(--box-shadow);
		background-color: #fff;
	}

	.category-name {
		color: rgb(var(--black));
		margin: 0 0 0.5rem 0;
	}

	.category-count {
		color: rgb(var(--gray));
		margin: 0;
		font-size: 0.9rem;
	}

	/* About Section */
	.about-section {
		background-color: #f8f9fa;
		padding: 4rem 2rem;
		border-radius: 8px;
		text-align: center;
	}

	.about-content {
		max-width: 900px;
		margin: 0 auto;
	}

	.about-features {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin: 3rem 0;
	}

	.feature {
		padding: 1.5rem;
	}

	.feature-icon {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.feature h3 {
		margin-top: 0;
	}

	/* CTA Buttons */
	.cta-button {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		border-radius: 4px;
		font-weight: 600;
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.cta-button.primary {
		background-color: var(--accent);
		color: white;
	}

	.cta-button.primary:hover {
		background-color: var(--accent-dark);
		transform: translateY(-3px);
	}

	.cta-button.secondary {
		background-color: rgba(255, 255, 255, 0.2);
		color: white;
		border: 2px solid white;
	}

	.cta-button.secondary:hover {
		background-color: rgba(255, 255, 255, 0.3);
		transform: translateY(-3px);
	}

	/* Responsive Adjustments */
	@media (max-width: 768px) {
		.hero {
			padding: 4rem 1rem;
		}

		.hero-title {
			font-size: 2.5rem;
		}

		.hero-tagline {
			font-size: 1.2rem;
		}

		.hero-cta {
			flex-direction: column;
			gap: 1rem;
		}

		.featured-grid,
		.posts-grid {
			grid-template-columns: 1fr;
		}

		.about-features {
			grid-template-columns: 1fr;
		}

		.section-header {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.5rem;
		}
	}
</style>
