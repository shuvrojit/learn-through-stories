---
export interface Props {
  content: string;
}

const { content } = Astro.props;

function calculateReadingTime(text: string): number {
  const wordsPerMinute = 200; // Average reading speed
  const numberOfWords = text.split(/\s+/).length;
  return Math.ceil(numberOfWords / wordsPerMinute);
}

const readingTime = calculateReadingTime(content);
---

<div class="reading-time">
  <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <circle cx="12" cy="12" r="10"/>
    <polyline points="12 6 12 12 16 14"/>
  </svg>
  <span>{readingTime} min read</span>
</div>

<style>
  .reading-time {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgb(var(--gray));
    font-size: 0.9rem;
  }

  .icon {
    width: 1rem;
    height: 1rem;
  }
</style>
