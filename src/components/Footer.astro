---
import { SITE_TITLE } from "../consts";
const today = new Date();
---

<footer>
  <div class="footer-content">
    <div class="footer-primary">
      <div class="footer-branding">
        <h3 class="footer-title">{SITE_TITLE}</h3>
        <p class="footer-tagline">Learning through immersive storytelling</p>
      </div>
      
      <nav class="footer-nav">
        <div class="footer-nav-section">
          <h4>Explore</h4>
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/blog/">Articles</a></li>
            <li><a href="/categories/">Topics</a></li>
            <li><a href="/about/">About</a></li>
          </ul>
        </div>
        
        <div class="footer-nav-section">
          <h4>Categories</h4>
          <ul>
            <li><a href="/blog/category/programming">Programming</a></li>
            <li><a href="/blog/category/design">Design</a></li>
            <li><a href="/blog/category/photography">Photography</a></li>
            <li><a href="/blog/category/writing">Writing</a></li>
          </ul>
        </div>
        
        <div class="footer-nav-section">
          <h4>Connect</h4>
          <ul>
            <li><a href="https://twitter.com/tstories" target="_blank" rel="noopener noreferrer">Twitter</a></li>
            <li><a href="https://github.com/t-stories" target="_blank" rel="noopener noreferrer">GitHub</a></li>
            <li><a href="mailto:hello@t-stories.com">Contact Us</a></li>
          </ul>
        </div>
      </nav>
    </div>
    
    <div class="footer-secondary">
      <p>&copy; {today.getFullYear()} {SITE_TITLE}. All rights reserved.</p>
      <p class="footer-credit">
        Built with 
        <a href="https://astro.build" target="_blank" rel="noopener noreferrer">Astro</a> 
        and 
        <a href="https://mdxjs.com/" target="_blank" rel="noopener noreferrer">MDX</a>
      </p>
    </div>
  </div>
</footer>

<style>
  footer {
    padding: 2rem 0;
    background-color: #f8f9fa;
    border-top: 1px solid rgba(var(--gray-light), 1);
    margin-top: 4rem;
  }
  
  .footer-content {
    width: calc(100% - 4rem);
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .footer-primary {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 2rem;
    padding-bottom: 2rem;
    margin-bottom: 2rem;
    border-bottom: 1px solid rgba(var(--gray-light), 1);
  }
  
  .footer-branding {
    display: flex;
    flex-direction: column;
  }
  
  .footer-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
  }
  
  .footer-tagline {
    font-size: 1.1rem;
    margin: 0;
    color: rgb(var(--gray));
  }
  
  .footer-nav {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }
  
  .footer-nav-section h4 {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    color: rgb(var(--black));
  }
  
  .footer-nav-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-nav-section li {
    margin-bottom: 0.75rem;
  }
  
  .footer-nav-section a {
    text-decoration: none;
    color: rgb(var(--gray));
    transition: color 0.2s ease;
  }
  
  .footer-nav-section a:hover,
  .footer-nav-section a:focus {
    color: var(--accent);
    text-decoration: underline;
  }
  
  .footer-secondary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 0.9rem;
    color: rgb(var(--gray));
  }
  
  .footer-secondary p {
    margin: 0;
  }
  
  .footer-credit a {
    color: var(--accent);
    text-decoration: none;
  }
  
  .footer-credit a:hover,
  .footer-credit a:focus {
    text-decoration: underline;
  }
  
  @media (max-width: 768px) {
    .footer-primary {
      grid-template-columns: 1fr;
      text-align: center;
    }
    
    .footer-nav {
      grid-template-columns: 1fr;
      text-align: center;
    }
    
    .footer-secondary {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
